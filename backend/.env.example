# Voice Assistant Environment Variables
# Copy this file to .env and replace with your actual API keys

# ===== DEEPGRAM CONFIGURATION =====
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_LANGUAGE=en
DEEPGRAM_PUNCTUATE=true

# ===== AZURE OPENAI CONFIGURATION ===== #Optional
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_MODEL=gpt-4o-mini
AZURE_OPENAI_MAX_TOKENS=150
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_SYSTEM_MESSAGE=You are a helpful assistant. Keep responses concise and conversational.

# ===== ELEVENLABS CONFIGURATION =====
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
ELEVENLABS_STABILITY=0.75
ELEVENLABS_SIMILARITY_BOOST=0.75

# ===== OPENROUTER CONFIGURATION =====
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-3.5-turbo
# Available models: anthropic/claude-3-sonnet, google/gemini-pro, meta-llama/llama-2-70b-chat, etc.
OPENROUTER_MAX_TOKENS=150
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_SYSTEM_MESSAGE=You are a helpful assistant. Keep responses concise and conversational.
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_SITE_NAME=Voice Assistant
